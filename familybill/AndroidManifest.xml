<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ldm.familybill"
    android:versionCode="101"
    android:versionName="1.0.1
    
    " >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <activity
            android:name="com.ldm.main.WelcomeActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ldm.main.MainActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ldm.expend.AddBillActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ldm.bill.activity.DayActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ldm.bill.activity.MonthBillActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ldm.bill.activity.YearBillActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.ldm.bill.activity.BillDetailActivity"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>